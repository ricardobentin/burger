<h1>EAT DA BURGER!</h1>

<h2>Burgers Ready to be Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{id}}. {{burger_name}}
        <button class="devoured" data-id="{{id}}" data-devoured="{{devoured}}">
            EAT ME!
        </button></li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{id}}. {{burger_name}}
    </li>
    {{/if}}

    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>

