<h1>EAT DA BURGER!</h1>
<img src="/assets/img/burger.png"
<div id="not_devoured">
    {{!-- <h2>Burgers Ready to be Devoured!</h2> --}}
    {{#each burgers}}
    {{#unless devoured}}
    <div class="not-eaten">
        {{id}}. {{burger_name}}
        <button class="devoured" data-id="{{id}}" data-devoured="{{devoured}}">
            EAT ME!
        </button></div>
    {{/unless}}
    {{/each}}
</div>


<h2>Devoured Burgers!</h2>  
<div id="devoured">
        {{#each burgers}}
    {{#if devoured}}
    <div class="eaten">
        {{id}}. {{burger_name}}
    </div>
    {{/if}}

    {{/each}}
</div>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
</form>